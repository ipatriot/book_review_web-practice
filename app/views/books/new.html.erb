<%= form_for @book do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :author %>
<%= f.text_field :author %>

<%= f.label :isbn %>
<%= f.text_field :isbn %>

<br>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.submit "Add Book", class:"Button" %>



<% end %>


 <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>

 <% end %>
